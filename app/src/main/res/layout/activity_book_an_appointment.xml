<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bookappointment"
    tools:context=".bookAnAppointment">

    <Spinner
        android:id="@+id/appointmentTimeSpinner"
        android:layout_width="132dp"
        android:layout_height="54dp"
        android:layout_marginStart="160dp"
        android:layout_marginBottom="120dp"
        android:entries="@array/hours"
        app:layout_constraintBottom_toTopOf="@+id/conferm"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/BookingFromTimeLable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="8dp"
        android:text="From: "
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/appointmentTimeSpinner"
        app:layout_constraintTop_toBottomOf="@+id/fromTimeLable2" />

    <TextView
        android:id="@+id/fromTimeLable2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="13dp"
        android:text="Appointment Time"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/conferm"
        android:layout_width="304dp"
        android:layout_height="62dp"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="42dp"
        android:backgroundTint="#596A7B"
        android:text="Confirm The Appointment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="195dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/medicalappointment" />
</androidx.constraintlayout.widget.ConstraintLayout>